[
    // 1. Quick open file (default: Ctrl+P)
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen",
        "when": "editorTextFocus"
    },
    
    // 2. Open command palette (default: Ctrl+Shift+P)
    {
        "key": "ctrl+shift+p",
        "command": "workbench.action.showCommands",
        "when": "editorTextFocus"
    },
    
    // 3. Format document (default: Shift+Alt+F)
    {
        "key": "alt+f",
        "command": "editor.action.formatDocument",
        "when": "editorTextFocus && !editorReadonly"
    },
    
    // 4. Find and replace (default: Ctrl+H)
    {
        "key": "ctrl+h",
        "command": "editor.action.replace",
        "when": "editorTextFocus"
    },
    
    // 5. Toggle terminal (custom: Ctrl+Shift+T)
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "!terminalFocus"
    }
]
    